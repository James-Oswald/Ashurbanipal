% chapter headings
\usepackage[center,sc]{titlesec}

% Reset chapter number format to uppercase roman numerals
\renewcommand{\thechapter}{\Roman{chapter}}

\setcounter{part}{-1}
%\setcounter{chapter}{-1}

\makeatletter
\@addtoreset{chapter}{part}
\makeatother 

\renewcommand\part{%
  \if@openright
    \cleardoublepage
  \else
    \clearpage
  \fi
    \setcounter{chapter}{0}
} % I reset manually here.  



% Ajustar o estilo do título do capítulo
\titleformat{\chapter}[block]
  {\normalfont\scshape\huge\centering}
  {
    \ifthenelse{\value{part}>0}%
        {}%
        {Prelude\:}%
    \ifthenelse{\value{part}>0}%
        {Chapter \thechapter}%
        {\thechapter}%
    \\
  }
  {0pt}
  {}

\titleformat{\part}[block]
  {\normalfont\scshape\huge\centering}
  {}%Act \thepart\\}
  {0pt}
  {}

% headers/footers
\usepackage{fancyhdr}
\setlength{\headheight}{15pt}
\pagestyle{fancy}
\fancyhf{}
\renewcommand{\headrulewidth}{0pt}
\fancyhf[CFE,CFO]{\thepage}         % Set page numbers in the footer
%\fancyhead[LE,RO]{\thepage}        % Set page numbers in the left/right sides of the header
\fancyhead[CE]{\itshape\authorname} % Author name in middle of left-side page header
\fancyhead[CO]{
    \itshape\booktitle\:%
    \ifthenelse{\value{part}>0}%
        {Act\:\thepart\:}%
        {Prelude\:}%
    \ifthenelse{\value{part}>0}%
        {Chapter \thechapter}%
        {\thechapter}%
}